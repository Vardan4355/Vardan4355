// WAP to check whether a person is eligible for voting or not
#include<stdio.h>
int main()
{
    int x, y;
    printf("Enter your age:");
    scanf("%d", &x);
    if (x >= 18)
      printf("You are eligible for voting.");
    
    else
    
        printf("You are not eligible for voting.");
    
      return 0;
}  

#include<stdio.h>
int main()
{
    char ch;
    printf("Enter character");
    scanf("%c",&ch);
    if(ch=='A' || ch=='a' || ch=='e' || ch=='E' || ch=='i' || ch=='I' || ch=='o' || ch=='O' || ch=='u' || ch=='U')
    printf("It is vowel");
    else 
    printf("It is constant");
    return 0;
}

// WAP to check whether the give is leap year or not.
#include<stdio.h>
int main()
{
    int year;
    printf("Enter year : ");
    scanf("%d",&year);
    if(year%100 ==0)
    {
        if(year%400 == 0)
        {
            printf("%d is a leap year.",year);
        }
        else
        {
            printf("%d is not a leap year.",year);
        }
    }
    else
    {
        if(year%4 ==0)
        {
            printf("%d is a leap year.",year);
        }
        else
        {
            printf("%d is not a leap year.",year);
        }
    }
    return 0;
    }

// WAP check whether the given character is alphabet,digit or symbol
#include<stdio.h>
int main()
{
    printf("Enter Character");
    char ch;
    scanf("%c", &ch);
    if((ch>=65 && ch<=90)|| (ch>=97 && ch<=122))
       printf("It is alphabet");
       else if (ch>=48 && ch<=57)
       printf("It is digit");
       else
       printf("It is symbol");
       return 0;
    

}

// WAP to find the largest number among three
#include<stdio.h>
int main()
{
    int x, y, z;
    printf("Enter the first number:" );
    scanf("%d", &x);
    printf("Enter the second number:" );
    scanf("%d", &y);
    printf("enter the third number:" );
    scanf("%d", &z);
    if (x > y && x > z)
    printf("%d is the largest number", x);
    else if (y > z)
    printf("%d is the largest number", y);
    else
    printf("%d is the largest number", z);
    return 0;

}

