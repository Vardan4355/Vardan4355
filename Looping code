//  WAP to print your name on screen 10 time
 #include<stdio.h>
 int main()
 {
     int i;
     for(i=0;
     i<10;
     i++)     {
      printf("Vardaan Sharma \n");
     }
    return 0;
 }

// WAP to print the number from 1 to N
#include<stdio.h>
int main()
{
   int i,n;
   printf("Enter the vlaue of N : ");
   scanf("%d",&n);
   for(i=1;
   i<n;
   i++)
   {
    printf("%d", i);
   }
    return 0;
}

