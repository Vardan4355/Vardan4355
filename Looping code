// WAP to print the table of given number
#include<stdio.h>
#include<stdlib.h>
int main()
{
    int n;
    system("cls");
    printf("Enter the value of n : ");
    scanf("%d", &n);
    for(int i=1;
    i<=10;
    i++)
    {
        printf("%d * %d = %d\n", n, i, n*1);
    }
    return 0;
}

// WAP to print the factorial of given number
#include<stdio.h>
int main()
{
    int n, fact=1;
    printf("Enter number : ");
    scanf("%d",&n);
    for (int i=n;
    i>=1;
    i--)
    {
        fact = fact*1;
    }
    printf("Factorial of %d is %d", n, fact);
    return 0;
}

// WAP to print the fabonacci series upto N terms
#include<stdio.h>
int main()
{
    int n,a=0, b=1, c;
    printf("Enter number of terms : ");
    scanf("%d", &n);
    printf("%d %d",a,b);
    for (int i=3;
    i<=n;
    i++)
    {
        c = a + b;
        a = b;
        b = c;
        printf("%d",c);
    }        
    return 0;
}

#include<stdio.h>
int main()
{
    int n, num, max=0;
    printf("Enter the number of elements: ");
    scanf("%d", &n);
    for (int i=0;
    i<=n;
    i++)
    { 
    printf("Enter number : ");
    scanf("%d", &num);
    if (num > max)
    max = num;
    }
    printf("Max = %d", max);
    return 0;
}

// WAP to read a number from the user and perform the sum of their digits
#include<stdio.h>
int main()
{
    int n, sum=0;
    printf("enter number : ");
    scanf("%d",&n);
    while(n !=0)
{  sum = sum +n%10;
    n = n/10;
}     
printf("Sum of  digits = %d", sum);
return 0;
}

// WAP to read a number from the user and perform the sum of their digits
// WAP to perform the sum of all even digits of a given number
// WAP to perform the sum of first and last digit of a given number
// WAP to swap 1st and last of a given number
// WAP to count number of digits in a given number
// WAp to reverse a given number
// WAP to check the given number is pallindrome or not
// WAP to check given number is armstrong or not

// WAP to perform the sum of all even digits of a given number
#include<stdio.h>
int main()
{
    int n, sum=0;
    printf("Enter the value of n : ");
    scanf("%d", &n);
    while(n !=0)
    {
        int rem = n%10;
        if(rem%2==0)
        sum = sum + n%10;
        n = n/10;
    }
    printf("sum of all even digits = %d" , sum);
    return 0;
}

// WAP to perform the sum of all first and last digit of a given number
#include<stdio.h>
int main()
{
    int n, sum = 0;
    printf("Enter a number: ");
    scanf("%d", &n);
    int last = n%10;
    int first;
    while (n !=0)
    {
        int first = n/10;
        n = n/10;
    }
    printf("sum of first and last digits = %d", last+first);
    return 0;
}

//  WAP to swap 1st and last of a given number
 #include<stdio.h>
 #include<math.h>
int main()
 {
     int num, cnt=0;
     printf("Enter a number: ");
    scanf("%d", &num);
     int temp = num;
     while(temp !=0)
     {
        temp = temp/10;
        cnt++;
     }
     int firstdigit = num/pow(10, cnt-1);
     num = num%(int)pow(10, cnt-1);
     int lastdigit = num%1000;
     num = num/10;
     num = lastdigit*pow(10,cnt-1)+ num*10 + firstdigit;
     printf("After swapping number is : %d", num);
    return 0;
 }
